<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">
    <android.support.v7.widget.CardView
        style="@style/status_CardView"
        android:layout_margin="2dp">

        <com.cutesys.sponsermasterlibrary.Expandablelayout.ExpandableLayout
            android:id="@+id/expandable_company"
            app:expWithParentScroll="true"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            style="@style/layoutmatchwrap">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/profilebg"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="top"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/profile"
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:src="@drawable/profile"/>
                    </LinearLayout>


                    <!-- <Button
                         android:id="@+id/mcardview"
                         android:layout_width="match_parent"
                         android:layout_height="40dp"
                         android:layout_marginLeft="5dp"
                         android:layout_marginBottom="3dp"
                         android:layout_marginTop="3dp"
                         android:text="Profile"
                         android:background="@drawable/profilebg"/>-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/cname1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/listname"
                            android:singleLine="true"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:textColor="@color/colorAccentsecond"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorAccentsecond"
                            android:layout_gravity="right"
                            android:padding="2dp"
                            android:src="@mipmap/ic_green"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="4dp">
                        <ImageView
                            android:id="@+id/img1"
                            android:src="@mipmap/f_client"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/campname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginLeft="@dimen/listimgcontent"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="15sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <ImageView
                            android:id="@+id/img2"
                            android:src="@mipmap/f_cpy"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/camplocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginLeft="@dimen/listimgcontent"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <ImageView
                            android:id="@+id/img3"
                            android:src="@mipmap/f_cpy"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/campaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginLeft="@dimen/listimgcontent"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:text="Manager :"
                            android:textStyle="normal"
                            android:textColor="#308f77"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/campmanager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginLeft="@dimen/listimgcontent"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="15sp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Contact:"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:typeface="serif"/>
                        <TextView
                            android:id="@+id/campcontact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#971250"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:textSize="15sp"
                            android:typeface="serif"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Email:"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:textSize="16sp"
                            android:padding="5dp"
                            android:typeface="serif"/>
                        <TextView
                            android:id="@+id/campemail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#971250"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:textSize="15sp"
                            android:typeface="serif"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Intake:"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:textSize="16sp"
                            android:padding="5dp"
                            android:typeface="serif"/>
                        <TextView
                            android:id="@+id/campintake"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#971250"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:textSize="15sp"
                            android:typeface="serif"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.cutesys.sponsermasterlibrary.Expandablelayout.ExpandableLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>