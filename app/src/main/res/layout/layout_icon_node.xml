<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="48dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="match_parent">


    <com.cutesys.sponsermasterlibrary.Print.PrintView
        android:layout_alignParentLeft="true"
        android:id="@+id/arrow_icon"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:print_iconText="@string/ic_keyboard_arrow_right"
        app:print_iconColor="#12558C"
        app:print_iconFont="fonts/material-icon-font.ttf"
        app:print_iconSize="20dp" />

    <com.cutesys.sponsermasterlibrary.Print.PrintView
        android:layout_alignWithParentIfMissing="true"
        android:id="@+id/icon"
        android:layout_toRightOf="@id/arrow_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:print_iconText="@string/ic_email"
        app:print_iconColor="#12558C"

        app:print_iconFont="fonts/material-icon-font.ttf"
        app:print_iconSize="24dp" />

    <TextView
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/icon"
        android:layout_toLeftOf="@+id/buttonsContainer"
        android:id="@+id/node_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.cutesys.sponsermasterlibrary.Print.PrintView
            android:id="@+id/btn_addFolder1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="gone"
            app:print_iconSize="20dp"
            app:print_iconColor="#99cc00"
            app:print_iconFont="fonts/material-icon-font.ttf"
            app:print_iconText="@string/ic_add" />

    </LinearLayout>
</RelativeLayout>