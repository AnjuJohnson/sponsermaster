<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cmpy_empy_card"
        style="@style/list_CardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/cardview_linearlayout"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/profilebg"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="top"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/profile"
                                    android:layout_width="68dp"
                                    android:layout_height="68dp"
                                    android:src="@drawable/profile"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:layout_marginLeft="8dp">

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/listname"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorAccentsecond"/>
                                <LinearLayout
                                    android:id="@+id/invisible_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:id="@+id/f_emp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/f_emp"/>
                                    <TextView
                                        android:id="@+id/eid"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:ellipsize="end"
                                        android:textColor="?android:attr/textColorSecondary"
                                        android:layout_marginLeft="@dimen/listimgcontent"
                                        android:textSize="15sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/invisible_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:id="@+id/f_emp1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/f_emp"/>
                                    <TextView
                                        android:id="@+id/cmpid"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:ellipsize="end"
                                        android:textColor="?android:attr/textColorSecondary"
                                        android:layout_marginLeft="@dimen/listimgcontent"
                                        android:textSize="15sp"/>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:id="@+id/f_cpy"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/f_cpy"/>
                                    <TextView
                                        android:id="@+id/location"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:ellipsize="end"
                                        android:textColor="?android:attr/textColorSecondary"
                                        android:layout_marginLeft="@dimen/listimgcontent"
                                        android:textSize="15sp"/>
                                </LinearLayout>


                                <!--<TextView
                                    android:id="@+id/cmpid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="3"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="4dp"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:textSize="@dimen/listcontent"/>-->


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/f_mail"/>
                                    <TextView
                                        android:id="@+id/mail"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:ellipsize="end"
                                        android:layout_marginLeft="@dimen/listimgcontent"
                                        android:textColor="?android:attr/textColorSecondary"
                                        android:textSize="15sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/desig_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:id="@+id/f_designation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/f_designation"/>
                                    <TextView
                                        android:id="@+id/desig"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:ellipsize="end"
                                        android:layout_marginLeft="@dimen/listimgcontent"
                                        android:textColor="?android:attr/textColorSecondary"
                                        android:textSize="15sp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="10dp">
                                    <ImageView
                                        android:id="@+id/f_call"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/f_call"/>
                                    <TextView
                                        android:id="@+id/call"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:ellipsize="end"
                                        android:textColor="?android:attr/textColorSecondary"
                                        android:layout_marginLeft="@dimen/listimgcontent"
                                        android:textSize="15sp"/>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/action_morelayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/action_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/ic_action_more"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/visible"
                    android:visibility="invisible"
                    android:orientation="horizontal">
                    <com.cutesys.sponsermasterlibrary.Button.FloatingActionButton
                        android:id="@+id/calloption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fab_call"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="20dp"
                        style="@style/MenuButtonsStyleoption" />
                    <com.cutesys.sponsermasterlibrary.Button.FloatingActionButton
                        android:id="@+id/mailoption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fab_mail"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="20dp"
                        android:layout_marginLeft="15dp"
                        style="@style/MenuButtonsStyleoption" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>