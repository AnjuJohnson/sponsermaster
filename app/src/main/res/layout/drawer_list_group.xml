<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/grouplist"
    android:gravity="start"
    android:paddingBottom="11dp"
    android:paddingTop="11dp"
    android:orientation="horizontal">

    <com.cutesys.sponsermasterlibrary.MultilevelListview.LevelBeamView
        android:id="@+id/dataItemLevelBeam"
        android:layout_width="1dp"
        android:visibility="gone"
        android:layout_height="25dp"/>
    <ImageView
        android:id="@+id/ic_img"
        style="@style/NavDrawerRowItemIcon"
        tools:ignore="ContentDescription"
        android:backgroundTint="@android:color/black"/>

    <TextView
        android:id="@+id/dataItemName"
        android:layout_weight="1"
        style="@style/NavDrawerRowItemText"
        android:textColor="@android:color/black"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="23sp"
        android:textSize="@dimen/expnadablesubtext"/>

    <ImageView
        android:id="@+id/dataItemArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="5dp"
        android:backgroundTint="@android:color/black"
        android:gravity="right"/>
</LinearLayout>