<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/profileview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_margin="3dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        app:cardBackgroundColor="#ffffff"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <LinearLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:gravity="bottom"

                        android:layout_marginBottom="3dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/pro">
                        <TextView
                            android:paddingLeft="10dp"
                            android:paddingRight="3dp"
                            android:textStyle="bold"
                            android:id="@+id/employee_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:background="#008960"/>
                            <TextView
                                android:paddingLeft="10dp"
                                android:paddingRight="3dp"
                                android:textStyle="bold"
                                android:id="@+id/employee_empid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:background="#008960"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <TextView
                                    android:padding="5dp"
                                    android:paddingLeft="1dp"
                                    android:textColor="@color/app_black"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Company"
                                    android:textStyle="normal"

                                    android:textSize="16sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5">
                                <TextView
                                    android:id="@+id/company"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:typeface="serif"
                                    android:textSize="17sp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <TextView
                                    android:padding="5dp"
                                    android:paddingLeft="1dp"
                                    android:textColor="@color/app_black"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Salary"
                                    android:textStyle="normal"

                                    android:textSize="16sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5">
                                <TextView
                                    android:id="@+id/salary"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"


                                    android:typeface="serif"
                                    android:textSize="17sp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <TextView
                                    android:padding="5dp"
                                    android:paddingLeft="1dp"
                                    android:textColor="@color/app_black"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Request Amount"
                                    android:textStyle="normal"

                                    android:textSize="16sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5">
                                <TextView
                                    android:id="@+id/req_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"


                                    android:typeface="serif"
                                    android:textSize="17sp"/>
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/loan_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <TextView
                                        android:padding="5dp"
                                        android:paddingLeft="1dp"
                                        android:textColor="@color/app_black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Request Date"
                                        android:textStyle="normal"

                                        android:textSize="16sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5">
                                    <TextView
                                        android:id="@+id/req_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="17sp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <TextView
                                        android:padding="5dp"
                                        android:paddingLeft="1dp"
                                        android:textColor="@color/app_black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Approve Amount"
                                        android:textStyle="normal"
                                        android:textSize="16sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5">
                                    <TextView
                                        android:id="@+id/approv_amount"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="17sp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <TextView
                                        android:padding="5dp"
                                        android:paddingLeft="1dp"
                                        android:textColor="@color/app_black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Approve Date"
                                        android:textStyle="normal"
                                        android:textSize="16sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5">
                                    <TextView
                                        android:id="@+id/approv_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="17sp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <TextView
                                        android:padding="5dp"
                                        android:paddingLeft="1dp"
                                        android:textColor="@color/app_black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Type"
                                        android:textStyle="normal"
                                        android:textSize="16sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5">
                                    <TextView
                                        android:id="@+id/type"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="17sp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <TextView
                                        android:padding="5dp"
                                        android:paddingLeft="1dp"
                                        android:textColor="@color/app_black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Status"
                                        android:textStyle="normal"
                                        android:textSize="16sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5">
                                    <TextView
                                        android:id="@+id/status"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="17sp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <TextView
                                        android:padding="5dp"
                                        android:paddingLeft="1dp"
                                        android:textColor="@color/app_black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Pay Date"
                                        android:textStyle="normal"
                                        android:textSize="16sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5">
                                    <TextView
                                        android:id="@+id/pay_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="17sp"/>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_marginBottom="3dp"
                android:layout_marginTop="8dp"
                android:id="@+id/moredata"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/down"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/downarrow_24"
                    android:tint="@color/colorPrimary"
                    />

            </FrameLayout>
            <FrameLayout
                android:id="@+id/lowdata"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#008960">

                <ImageView
                    android:id="@+id/up"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/up_24"
                    android:tint="@color/white"
                    />

            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>